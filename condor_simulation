MESHXYZ_ARGS = --num-cpus=8 --num-dirs=8 --network=garnet --topology=Mesh_XYZ --mesh-rows=2 --y-depth=2 --z-depth=2 --sim-cycles=50000 --synthetic=uniform_random --routing-algorithm=2 --vcs-per-vnet=4
#Mesh XYZ topology, XYZ routing

CHIPLET_HOMO_ARGS = --num-cpus=8 --num-dirs=8 --network=garnet --topology=Homo_Chiplets --mesh-rows=2 --y-depth=2 --z-depth=2 --num-chiplets-x=2 --num-chiplets-y=2 --sim-cycles=50000 --synthetic=uniform_random --routing-algorithm=3 --vcs-per-vnet=4
#Chiplet Homogeneous topology, Chiplet Homogeneous routing

XYZ_CHIPLET_HOMO_ARGS = --num-cpus=8 --num-dirs=8 --network=garnet --topology=Mesh_XYZ --mesh-rows=2 --y-depth=2 --z-depth=2 --sim-cycles=50000 --synthetic=uniform_random --routing-algorithm=3 --vcs-per-vnet=4
#XYZ topology, Chiplet Homogeneous routing

CHIPLET_HETERO_ARGS = --num-cpus=32 --num-dirs=32 --network=garnet --topology=Hetero_Chiplets --mesh-rows=4 --y-depth=8 --z-depth=1 --hetero-chiplets-input=0,1,0,1,2,5,0,3,6,7,0,1,0,1,2,3,6,7,2,3 --sim-cycles=50000 --synthetic=uniform_random --routing-algorithm=4 --vcs-per-vnet=4
#Chiplet Heterogeneous topology, Chiplet Heterogeneous routing

XYZ_CHIPLET_HETERO_ARGS = --num-cpus=32 --num-dirs=32 --network=garnet --topology=Mesh_XYZ --mesh-rows=4 --y-depth=8 --z-depth=1 --hetero-chiplets-input=0,1,0,1,2,5,0,3,6,7,0,1,0,1,2,3,6,7,2,3 --sim-cycles=50000 --synthetic=uniform_random --routing-algorithm=4 --vcs-per-vnet=4
